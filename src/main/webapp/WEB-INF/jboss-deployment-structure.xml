<jboss-deployment-structure>
    <deployment>
        <exclude-subsystems>
            <subsystem name="jaxrs"/>
            <subsystem name="webservices"/>
            <subsystem name="resteasy" />
        </exclude-subsystems>
        <exclusions>
            <module name="javax.faces.api" slot="main"/>
            <module name="com.sun.jsf-impl" slot="main"/>

            <!-- Exclude Resteasy -->
            <module name="org.jboss.resteasy"/>
            <module name="org.jboss.resteasy-cdi"/>
            <module name="org.jboss.resteasy-crypto"/>
            <module name="org.jboss.resteasy-jackson2-provider"/>
            <module name="org.jboss.resteasy-jackson-provider"/>
            <module name="org.jboss.resteasy-jaxb-provider"/>
            <module name="org.jboss.resteasy-jaxrs"/>
            <module name="org.jboss.resteasy-jettison-provider"/>
            <module name="org.jboss.resteasy-jsapi"/>
            <module name="org.jboss.resteasy-json-p-provider"/>
            <module name="org.jboss.resteasy-multipart-provider"/>
            <module name="org.jboss.resteasy-spring"/>
            <module name="org.jboss.resteasy-validator-provider-11"/>
            <module name="org.jboss.resteasy-yaml-provider"/>
            <!--<module name="javaee.api"/>-->
            <module name="javax.ws.rs.api"/>
            <module name="javax.ws.rs.core"/>
            <module name="org.jboss.as.jaxrs"/>
            <module name="org.jboss.as.webservices.*"/>
            <module name="org.jboss.ws.*"/>
            <module name="org.codehaus.jackson.jackson-core-asl"/>
            <module name="org.codehaus.jackson.jackson-jaxrs"/>
            <module name="org.codehaus.jackson.jackson-mapper-asl"/>
            <module name="org.codehaus.jackson.jackson-xc"/>
            <module name="org.codehaus.jettison"/>
        </exclusions>
        <dependencies>
            <module name="org.apache.commons.logging"/>
            <module name="org.apache.commons.collections"/>
            <module name="org.apache.log4j"/>
            <module name="org.dom4j"/>
            <module name="javax.faces.api" slot="1.2"/>
            <module name="com.sun.jsf-impl" slot="1.2"/>
        </dependencies>
    </deployment>
</jboss-deployment-structure>